<!DOCTYPE html>
<html>
<%- include("head") %>
    <link rel="stylesheet" href="/css/car.css">
    </head>

    <body>
        <%- include("navbar") %>

            <div class="containet-fluid">
                <div class="headerIm">
                    <img src="/imagenCoche/<%=coche.id%>" id="bck-img" alt="imagen del coche">

                    <h5 class="big-name">
                        <%= coche.name %>
                    </h5>

                    <div class="car-plate">
                        <div class="blue-banner">
                            <img class="eu-stars" src="/images/European_stars.svg" alt="european stars">
                            <span class="country-letter">E</span>
                        </div>
                        <p class="car-id">
                            <%= coche.plate %>
                        </p>
                    </div>
                </div>
            </div>


            <div class="container-fluid ctnf py-3">
                <% if (!coche.status) { %>
                    <div class="row p-3">
                        <div class="col-9">
                            <p class="info-text-dentro">Este coche se encuentra dentro del aparcamiento</p>
                        </div>
                        <div class="col-3 text-end align-middle pe-3">
                            <button id="payBtn" type="button" class="btn btn-success">PAGAR</button>
                        </div>
                    </div>
                    <% } else { %>
                        <div class="row p-3">
                            <p class="info-text-fuera">Este coche se encuentra fuera del aparcamiento</p>

                        </div>
                        <% } %>
